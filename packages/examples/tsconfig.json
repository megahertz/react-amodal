{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "outDir": "./lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2023"
  },
  "include": ["src/**/*"]
}
